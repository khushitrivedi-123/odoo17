<?xml version="1.0" encoding="utf-8"?><odoo>   <template id="report_hospital_treatment" >       <t t-name="codetrade_hospital.report_hospital_treatment">           <t t-call="web.basic_layout">                <t t-foreach="docs" t-as="o">                    <main>                        <div class="header" style="text-align:center;">                            <strong><h1><u> Hospital Treatment Report </u></h1></strong>                        </div>                        <div style="text-align:right; margin-bottom:20px;">                            <img t-if="o.image" t-att-src="'data:image/png;base64,%s' % o.image.decode('utf-8')" style="max-width:200px; max-height:200px; border:1px solid #000; padding:5px;"/>                        </div>                        <section>                            <p><strong>Treatment Code:</strong> <span t-field="o.treatment_code"/></p>                            <p><strong>Patient:</strong> <span t-field="o.patient_id.name"/></p>                            <p><strong>Physician:</strong> <span t-field="o.physician_id.name"/></p>                            <p><strong>Treatment Date:</strong> <span t-field="o.treatment_date"/></p>                            <table style="width:100%; border-collapse:collapse;" border="1">                                <thead>                                    <tr>                                        <th style="padding:8px;">User</th>                                        <th style="padding:8px;">Disease</th>                                        <th style="padding:8px;">Diagnosis Type</th>                                        <th style="padding:8px;">Date</th>                                    </tr>                                </thead>                                <tbody>                                    <t t-set="previous_user" t-value="None"/>                                    <t t-if="o.diagnosis_line_id">                                        <t t-foreach="o.diagnosis_line_id.sorted(lambda diagnosis: diagnosis.user_id.name)" t-as="diagnosis">                                            <tr>                                                <td>                                                    <t t-if="diagnosis.user_id.name != previous_user">                                                        <t t-esc="diagnosis.user_id.name"/>                                                        <t t-set="previous_user" t-value="diagnosis.user_id.name"/>                                                    </t>                                                </td>                                                <td>                                                    <t t-esc="diagnosis.disease_id.name"/>                                                </td>                                                <td>                                                    <t t-esc="diagnosis.date"/>                                                </td>                                                <td>                                                    <t t-esc="diagnosis.diagnosis_type"/>                                                </td>                                            </tr>                                        </t>                                    </t>                                    <t t-else="">                                        <tr>                                            <td colspan="4" style="text-align:center; padding:8px;">No diagnosis recorded.</td>                                        </tr>                                    </t>                                </tbody>                            </table>                        </section>                    </main>                </t>           </t>       </t>   </template></odoo>
<odoo>
    <data>
        <record id="menu_patient_registration" model="website.menu">
            <field name="name">Register as a Patient</field>
            <field name="url">/register-patient</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" eval="10"/>
        </record>

        <record id="patient_form_page" model="website.page">
            <field name="is_published">True</field>
            <field name="url">/register-patient</field>
            <field name="view_id" ref="hospital_website.form_template"/>
            <field name="track">True</field>
            <field name="website_meta_description">Patient registration form</field>
        </record>
    </data>
</odoo>


<odoo>
    <data>
        <record id="website_patient_thank_you" model="website.page">
            <field name="name">Patient Thank You Page</field>
            <field name="type">qweb</field>
            <field name="url">/patient-thank-you</field>
            <field name="website_published">True</field>
            <field name="key">codetrade_hospital_website.website_patient_thank_you</field>
            <field name="arch" type="xml">
                <t name="Thanks" t-name="codetrade_hospital_website.website_patient_thank_you">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <section class="s_text_block pt40 pb40 o_colored_level">
                                <div class="container s_allow_columns text-center">
                                    <h1 class="text-center">Thank You!</h1>
                                    <p>Your patient registration has been submitted successfully.</p>
                                    <a href="/" class="btn btn-primary">Back to Home</a>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
    </data>
</odoo>
